# Environment Configuration Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# Database Configuration
DB_HOST=localhost
DB_NAME=kdc_website
DB_USER=root
DB_PASS=

# Site Configuration
SITE_URL=http://localhost/coffee_farm
SITE_NAME="Kiihabwemi Development Company Ltd"

# WhatsApp Configuration (format: country code + number, no + or spaces)
WHATSAPP_NUMBER=256700000000

# Admin Configuration
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5

# Email Configuration (if implementing email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@kdc-coffee.com

# Google Services
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SEARCH_CONSOLE=your-verification-code

# Environment (development, staging, production)
APP_ENV=development

# Error Reporting
DISPLAY_ERRORS=1
LOG_ERRORS=1

# Security Keys (generate unique keys for production)
APP_KEY=base64:your-random-key-here
SESSION_KEY=your-session-secret-key

# Payment Gateway (if implementing)
# PAYMENT_API_KEY=
# PAYMENT_SECRET=
# PAYMENT_MODE=sandbox

# Social Media Links
FACEBOOK_URL=https://facebook.com/kiihabwemi
TWITTER_URL=https://twitter.com/kiihabwemi
INSTAGRAM_URL=https://instagram.com/kiihabwemi
LINKEDIN_URL=https://linkedin.com/company/kiihabwemi

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp

# Timezone
TIMEZONE=Africa/Kampala
